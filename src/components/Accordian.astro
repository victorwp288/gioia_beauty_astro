---
// src/components/Accordion.astro
const { title, description, image, imagePosition, children } = Astro.props;
---
<div class="border border-gray-300 rounded-md mb-4">
  <details class="group">
    <summary class="flex items-center justify-between p-4 cursor-pointer">
      <div>
        <h3 class="font-semibold">{title}</h3>
        <p class="text-sm text-gray-500">{description}</p>
      </div>
      <img src={image} alt={`${title} image`} class="w-6 h-6" />
    </summary>
    <div class="p-4">
      {children}
    </div>
  </details>
</div>
