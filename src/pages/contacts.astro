---
// src/pages/contacts.astro

import Map from '../components/react/Map.jsx';
import Layout from '../layouts/Layout.astro'

const latitude = 44.96556;
const longitude = 9.8514;
---
	<Layout title="Contacts">
	<html lang="it">
	<head>
		<meta charset="UTF-8" />
		<title>Contatti</title>
		<!-- Include Tailwind CSS and any other styles -->
	</head>
	<body>
		<div class="animate-fadeIn m-auto mt-24 w-[90vw] md:mt-32 md:w-[70vw]">
		<h2 class="font-serif text-3xl font-bold tracking-tight md:text-3xl">
			I nostri contatti
		</h2>
		<div class="grid md:grid-cols-2 pt-8 md:gap-0 gap-8">
			<div class="flex flex-col gap-2 md:gap-4">
			<h2 class="text-xl font-bold tracking-tight md:text-xl">
				Orari di apertura
			</h2>
			<div>
				<p>
				Lunedì, Mercoledì <b>9.00 - 19.00</b>
				</p>
				<p>
				Martedì, Giovedì <b>10.00 - 20.00</b>
				</p>
				<p>
				Venerdì <b>9.00 - 18.30</b>
				</p>
				<p>
				Sabato, Domenica <b>Chiuso</b>
				</p>
			</div>
			</div>

			<div class="flex flex-col gap-2 md:gap-4">
			<h2 class="text-xl font-bold tracking-tight md:text-xl">
				Contatti
			</h2>
			<div>
				<a
				target="_blank"
				href="https://maps.app.goo.gl/Vg7QqpUBStAnfnzV7"
				>
				<p>Via Emilia 60, 29010 Roveleto PC</p>
				</a>
				<a class="underline" href="mailto:gioiabeautyy@gmail.com">
				<p>gioiabeautyy@gmail.com</p>
				</a>
				<a href="tel:+393914213634">
				<p>+39 391 421 3634</p>
				</a>
				<a
				target="_blank"
				href="https://www.instagram.com/gioiabeautyy/"
				>
				<p>@gioiabeautyy</p>
				</a>
			</div>
			</div>
		</div>

		<div>
			<!-- Use the Map component with client hydration -->
			<Map latitude={latitude} longitude={longitude} client:only="react" />
		</div>
		</div>
	</body>
	</html>
</Layout>
